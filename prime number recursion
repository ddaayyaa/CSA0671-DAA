def is_prime(num, div=2):
    if num < 2:
        return False
    if num == 2:
        return True
    if num % div == 0:
        return False
    if div * div > num:
        return True
    
    return is_prime(num, div + 1)

def generate_primes(limit, current=2):
    if current < limit:
        if is_prime(current):
            print(current)
        generate_primes(limit, current + 1)

upper_limit = int(input("Enter an upper limit to generate prime numbers: "))
generate_primes(upper_limit)